<% if @is_register %>
<div class="text-center text-base font-bold border-b border-gray-500 pb-4 mb-4">Request a New Account</div>
<%= form_with url: sessions_path, method: :post, data: { turbo: false } do |form| %>
<%= form.label :name, class: "capitalize text-sm font-medium text-gray-500" %>
<%= form.text_field :name, value: @name, required: true, autofocus: true,
            class: "capitalize w-full px-3 py-2 border rounded-sm focus:ring-indigo-500 focus:border-indigo-500 border-gray-300" %>
<%= form.label :email_address, class: "capitalize text-sm font-medium text-gray-500" %>
<%= form.email_field :email_address, value: @email_address, required: true, autofocus: true,
            class: "lowercase w-full px-3 py-2 border rounded-sm focus:ring-indigo-500 focus:border-indigo-500 border-gray-300" %>
<%= form.label :password, class: "capitalize text-sm font-medium text-gray-500" %>
<%= form.password_field :password, required: true,
            class: "lowercase w-full px-3 py-2 border rounded-sm focus:ring-indigo-500 focus:border-indigo-500 border-gray-300" %>
<%= form.label :password_confirm, class: "capitalize text-sm font-medium text-gray-500" %>
<%= form.password_field :password_confirm, required: true,
            class: "lowercase w-full px-3 py-2 border rounded-sm focus:ring-indigo-500 focus:border-indigo-500 border-gray-300" %>
<%= form.submit "Request Account", class: "w-full bg-indigo-600 text-white rounded-sm hover:bg-indigo-700 text-sm font-semibold py-4 mt-4" %>
<%= link_to "Login to Existing Account", projects_path, class: "block w-full border-2 border-indigo-600 text-indigo-600 rounded-sm hover:text-indigo-700 hover:border-indigo-600 text-sm font-semibold py-3 mt-4 text-center" %>
<% end %>
<% else %>
<div class="text-center text-base font-bold border-b border-gray-500 pb-4 mb-4">Login to Your Account</div>
<%= form_with url: sessions_path, method: :post, data: { turbo: false } do |form| %>
<%= form.label :email_address, class: "capitalize text-sm font-medium text-gray-500" %>
<%= form.email_field :email_address, value: @email_address, required: true, autofocus: true,
            class: "lowercase w-full px-3 py-2 border rounded-sm focus:ring-indigo-500 focus:border-indigo-500 border-gray-300" %>
<%= form.label :password, class: "capitalize text-sm font-medium text-gray-500" %>
<%= form.password_field :password, required: true,
            class: "w-full px-3 py-2 border rounded-sm focus:ring-indigo-500 focus:border-indigo-500 border-gray-300" %>
<%= form.submit "Login Account", class: "w-full bg-indigo-600 text-white rounded-sm hover:bg-indigo-700 text-sm font-semibold py-4 mt-4" %>
<%= link_to "Request a New Account", projects_path(register: true), class: "block w-full border-2 border-indigo-600 text-indigo-600 rounded-sm hover:text-indigo-700 hover:border-indigo-600 text-sm font-semibold py-3 mt-4 text-center" %>
<% end %>
<% end %>