<header class="bg-white fixed top-0 left-0 right-0 border-b border-gray-300">
    <div class="mx-auto flex h-16 max-w-screen-xl items-center gap-8">
        <div class="flex flex-1 items-center justify-between">
            <nav aria-label="Global">
                <ul class="flex items-center gap-6 text-sm">
                    <li>
                        <%= link_to "Home", root_path, class: "font-semibold text-gray-700 transition hover:text-gray-700/75" %>
                    </li>
                    <li>
                        <%= link_to "Project", projects_path, class: "font-semibold text-gray-700 transition hover:text-gray-700/75" %>
                    </li>
                </ul>
            </nav>

            <div class="flex items-center gap-4">
                <div class="flex gap-4 items-center">
                    <% if @current_user %>
                    <span class="capitalize font-semibold"><%= @current_user.name.capitalize %></span>
                    <%= link_to "Logout", logout_sessions_path, class: "rounded bg-indigo-100 px-5 py-2.5 text-sm font-medium text-indigo-600 transition hover:text-indigo-600/75" %>
                    <% else %>
                    <%= link_to "Login Account", login_sessions_path, class: "rounded bg-indigo-600 px-5 py-2.5 text-sm font-medium text-white transition hover:bg-indigo-700" %>
                    <%= link_to "Register", register_sessions_path, class: "rounded bg-indigo-100 px-5 py-2.5 text-sm font-medium text-indigo-600 transition hover:text-indigo-600/75" %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</header>