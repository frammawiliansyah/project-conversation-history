<% content_for :title, "Projects" %>

<div class="w-full">
    <div class="flex justify-between items-center">
        <h1 class="font-bold text-4xl">List of Projects</h1>
        <%= link_to "Add project", new_project_path, class: "capitalize rounded bg-indigo-600 px-5 py-2.5 text-sm font-medium text-white transition hover:bg-indigo-700" %>
    </div>

    <div id="projects" class="min-w-full divide-y divide-gray-200 space-y-5 border rounded px-4 my-3">
        <% if @projects.any? %>
        <% @projects.each_with_index do |project, index| %>
        <div class="flex justify-between items-center m-0">
            <div class="grow pt-2 pb-3">
                <h1 class="capitalize font-bold text-xl text-gray-800 hover:text-indigo-700">
                    <%= link_to project.title, project %>
                </h1>
                <div class="pt-1">
                    <span class="rounded bg-indigo-100 px-2 py-1 text-xs whitespace-nowrap text-indigo-700 font-semibold"><%= project.project_status.name %></span>
                    <span class="p-1 text-xs whitespace-nowrap">by <span class="capitalize font-bold text-indigo-700"><%= project.user.name.capitalize %></span></span>
                </div>
            </div>

            <% if project.user_id == @current_user.id  %>
            <div class="flex-none">
                <%= link_to "Edit", edit_project_path(project), class: "rounded bg-indigo-100 px-5 py-3 text-sm font-medium text-indigo-600 transition hover:text-indigo-600/75 ml-1" %>
            </div>
            <% end %>
        </div>
        <% end %>
        <% else %>
        <p class="capitalize text-center my-10">No projects found</p>
        <% end %>
    </div>
</div>