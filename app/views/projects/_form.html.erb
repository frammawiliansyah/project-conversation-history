<%= form_with(model: project, class: "contents", data: { turbo: false }) do |form| %>
<% if project.errors.any? %>
<div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded mt-3">
    <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

    <ul class="list-disc ml-6">
        <% project.errors.each do |error| %>
        <li><%= error.full_message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: ["capitalize block shadow-sm rounded border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": project.errors[:title].none?, "border-red-400 focus:outline-red-600": project.errors[:title].any?}] %>
</div>

<div class="my-5">
    <%= form.label :content %>
    <%= form.textarea :content, rows: 15, class: ["block shadow-sm rounded border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": project.errors[:content].none?, "border-red-400 focus:outline-red-600": project.errors[:content].any?}] %>
</div>

<div class="inline">
    <%= form.submit class: "capitalize rounded bg-indigo-600 px-5 py-2.5 text-sm font-medium text-white transition hover:bg-indigo-700" %>
</div>
<% end %>